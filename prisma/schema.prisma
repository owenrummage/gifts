generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gift {
  id           Int     @id @default(autoincrement())
  name         String  @unique
  purchaseURL  String
  imageURL     String
  price        Int
  priority     Int
  category     String
  instructions String  @default("")
  reservedBy   String  @default("")
  active       Boolean @default(true)
}
